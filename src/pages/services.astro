---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Services" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">My Services</div>
  </div>

  <HorizontalCard
    title="Custom Web Development"
    img="/custom.webp"
    desc="Building responsive and scalable web applications using modern technologies like React, Next.js, and Node.js."
    badge="NEW"
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Enterprise Software Solutions"
    img="/erp.webp"
    desc="Designing and implementing ERP and SaaS solutions to streamline business operations and improve efficiency."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="E-commerce Development"
    img="/Ecom.webp"
    desc="Creating secure and user-friendly e-commerce platforms with integrated payment gateways and inventory management."
    url="#"
    badge="NEW"
  />
  <div class="divider my-0"></div>
 
</BaseLayout>
